  monomers = new CF2 [16].rot(180,1,0,0).move(1.5,0,0)
  delete monomers[14]
  delete monomers[15]
  

  monomers[14] = new nafionblock.move(21,0,0)

  

  # Now add a list of bonds connecting the carbon atoms together:

  write('Data Bond List') {
